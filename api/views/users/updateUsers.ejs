<%- include('../partials/header') %>
    <div class="container"><br>
        <hr>
        <div class="card">
            <h5 class="card-header text-primary">Atualização de Usuários</h5>            
            <div class="card-body">
                <form method="POST" action="/users/updateUsers/<%= usersEdit.id %>">                   
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="nome@exemplo.com" value="<%= usersEdit.email %>">
                    </div>                 
                    <div class="form-group">
                        <label for="password">senha</label>
                        <input type="password" class="form-control" id="new_password" name="password" placeholder="de 8 a 20 caracteres"  value="<%= usersEdit.password %>">
                    </div>
                    <h5 class="card-title">Defina aqui os níveis de acesso</h5>
                    <div class="row">
                        <legend class="col-form-label col-sm-2 pt-0">Níveis</legend>
                        <div class="col-sm-10">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="access" id="admin"
                                value="admin" checked>
                                <label class="form-check-label" for="admin">
                                    Admin
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="access" id="edit"
                                value="edit">
                                <label class="form-check-label" for="edit">
                                    Editor
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="access" id="view"
                                value="view">
                                <label class="form-check-label" for="view">
                                    Visualizar
                                </label>
                            </div>
                        </div>
                    </div>
                    </fieldset>                
                    <button class="btn btn-primary">Salvar</button>
                </form>
            </div>
        </div>
        <hr>
    </div><!-- /.container -->
    <%- include('../partials/footer') %>